    <p>
      <a href="http://instagram.com/soffes?ref=badge" class="ig-b- ig-b-16"><img src="http://badges.instagram.com/static/images/ig-badge-16.png" alt="Instagram"></a>
      <a href="http://instagram.com/soffes" rel="external nofollow">Follow @soffes</a>
    </p>
  </div>
  <% end %>

  <% if rdio = $redis['rdio_heavy_rotation'] %>
  <div class="rdio four-up">
    <ul>
    <% JSON(rdio).each do |album| %>
      <li>
        <a href="<%= album['url'] %>" rel="external nofollow" title="<%= album['name'] %> — <%= album['artist'] %>">
          <img src="<%= album['icon'] %>" alt="<%= album['name'] %> — <%= album['artist'] %>">
        </a>
      </li>
    <% end %>
    </ul>
    <p>
      <a href="http://rdio.com/people/soffes" rel="external nofollow"></a> <a href="http://rdio.com/people/soffes" rel="external nofollow">Follow soffes</a>
    </p>
  </div>
  <% end %>

