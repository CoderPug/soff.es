<% form_for [:admin, @post] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :permalink %><br />
    <%= f.text_field :permalink %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p<%= @post.published? ? " class=\"published\"" : "" %>>
    <%= f.label :published_at, "Published" %> <%= @post.published_time_in_words %><br />
    <%= f.datetime_select :published_at %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
