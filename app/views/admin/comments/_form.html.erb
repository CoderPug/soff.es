<% form_for @comments do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :post_id %><br />
    <%= f.text_field :post_id %>
  </p>
  <p>
    <%= f.label :author_name %><br />
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :author_email %><br />
    <%= f.text_field :author_email %>
  </p>
  <p>
    <%= f.label :author_website %><br />
    <%= f.text_field :author_website %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
