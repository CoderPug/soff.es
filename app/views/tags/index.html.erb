<%- title "Tags" -%>

<header>
  <h1><%= link_to 'Tags.', tags_url %></h1>
</header>

<section class="tags">
  <div class="tags clearfix">
  <% tag_cloud @tags, %w(nube1 nube2 nube3 nube4 nube5) do |tag, css_class| %>
    <%= link_to tag.name, tag, :class => css_class %>
  <% end %>
  </div>
  
  <nav>
    <ul>
      <li><%= link_to 'Read my blog', blog_url %></li>
      <li><%= link_to 'Listen to my music', music_url %></li>
      <li><%= link_to 'Find out more about me', about_url %></li>
      <li><%= link_to 'See what I\'ve been working on', github_url, :rel => 'external nofollow' %></li>
      <li><%= link_to 'Go home', root_url, :rel => 'home' %></li>
    </ul>
  </nav>
</section>
