<%- if @post -%>
<%- title @post.title -%>
<section class="blog">
  <%= render @post %>
  <div class="social">
    <%= zerply_button %>
    <%= tweet_button :url => post_url(@post, :host => 'samsoff.es'), :text => (@post.tweet_text.blank? ? @post.title : @post.tweet_text) %>
    <%= like_button post_url(@post, :host => 'samsoff.es') %>
  </div>
  <nav class="posts">
    <ul>
      <li class="previous">
        <%- previous_post = @post.previous; if previous_post -%>
        <%= link_to "&larr; #{previous_post.title}".html_safe, previous_post  %>
        <%- else -%>
        <span class="gray">This is my first post</span>
        <%- end -%>
      </li>
      <li class="next">
         <%- next_post = @post.next; if next_post -%>
         <%= link_to "#{next_post.title} &rarr;".html_safe, next_post  %>
         <%- else -%>
         <span class="gray">This is my latest post</span>
         <%- end -%>
      </li>
    </ul>
  </nav>
</section>
<%- else -%>
<%- title 'Post not found' -%>
<p>Nothing to see here. Move along.</p>
<%- end -%>
