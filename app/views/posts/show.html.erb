<%- if @post -%>
<%- title @post.title -%>
<section class="blog">
  <%= render @post %>
  <div class="social">
    <%= tweet_button :url => post_url(@post, :host => 'samsoff.es'), :text => (@post.tweet_text or @post.title) %>
    <%= like_button post_url(@post) %>
  </div>
  
  <div id="comments">
    <div id="fb-root"></div>
    <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script>
    <fb:comments href="samsoff.es" num_posts="2" width="640"></fb:comments>
  </div>
</section>
<%- else -%>
<%- title 'Post not found' -%>
<p>Nothing to see here. Move along.</p>
<%- end -%>
